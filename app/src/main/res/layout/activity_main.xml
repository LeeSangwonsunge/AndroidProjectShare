<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="버튼목록"
            android:textAlignment="center"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/btn_WalkCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBtnWalkCountClicked"
            android:text="만보기" />
        <Button
            android:id="@+id/btn_Dust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtnDustClicked"
            android:layout_weight="1"
            android:text="미세먼지" />
        <Button
            android:id="@+id/btn_Sleep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBtnSleepClicked"
            android:layout_weight="1"
            android:text="수면" />
        <Button
            android:id="@+id/btn_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onBtnLocationClicked"
            android:text="위치정보" />
    </LinearLayout>
</android.widget.LinearLayout>